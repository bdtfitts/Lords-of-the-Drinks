<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lordsofthedrinks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerSelectActivity"
            android:label="@string/title_activity_player_select" >
        </activity>
        <activity
            android:name=".TakePictureActivity"
            android:label="@string/title_activity_take_picture" >
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity
            android:name=".TurnStartActivity"
            android:label="@string/title_activity_turn_start" >
        </activity>
        <activity
            android:name=".TiltTheBeeActivity"
            android:label="@string/title_activity_tilt_the_bee" >
        </activity>
        <activity
            android:name=".TiltTheBeeResultActivity"
            android:label="@string/title_activity_tilt_the_bee_result" >
        </activity>
        <activity
            android:name=".JohnPageOneActivity"
            android:label="@string/title_activity_john_page_one" >
        </activity>
        <activity
            android:name=".JohnPageTwoActivity"
            android:label="@string/title_activity_john_page_two" >
        </activity>
        <activity
            android:name=".JohnGameActivity"
            android:label="@string/title_activity_john_game" >
        </activity>
        <activity
            android:name=".GameOverActivity"
            android:label="@string/title_activity_game_over" >
        </activity>
    </application>

</manifest>
