<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lordsofthedrinks.TakePictureActivity" >

    <ImageView
        android:id="@+id/playerPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/playerpicturetext"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:scaleType="fitCenter" />

    <EditText
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/playerReadyButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/playerReadyButton"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:enabled="true"
        android:hint="@string/namehint"
        android:inputType="text|textNoSuggestions"
        android:lines="1"
        android:maxLines="1"
        android:maxWidth="64dp"
        android:minLines="1"
        android:minWidth="64dp"
        android:scrollHorizontally="true"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:typeface="normal"
        android:width="64dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/playerReadyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/playerreadytext" />

</RelativeLayout>
